    {{ 'coming_soon' | camelcase }}
    {{ '<p>test</p>' | escape }}
    {% capture var %}
      One
      Two
      Three
      {% endcapture %}
    {{ var | newline_to_br }}
  -->
</div>

{% for block in section.blocks %}
  <h2>{{ block.settings.heading }}</h2>

  {% if block.settings.heading contains 'C' %}
    This potion contains restorative properties.
  {% endif %}

  <div
    style=" display:flex; justify-content: center; text-align: center; background-color:rgba(0, 128, 0, 0.1);"
  >
    {% for collection in collections %}
      {% if block.settings.collection.title == collection.title %}
        <a href="{{ collection.url }}" id="{{ section.id }}" class="collections">
          {{- block.settings.collection.title -}}
          <br>
          {{ block.settings.collection.image | img_url: 'large' | img_tag }}
          <br>
        </a>
      {% endif %}
    {% endfor %}
  </div>
{% endfor %}

{% schema %}
{
  "name": "Custom-Data",
  "settings": [],
  "blocks": [
    {
      "type": "richtext",
      "name": "Heading",
      "settings": [
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
        }
      ]
    },
       {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection-list"
        }
      ]
    }
  ],
   "presets": [
  {
    "name":"Custom-Data"
  }
]
}
{% endschema %}
